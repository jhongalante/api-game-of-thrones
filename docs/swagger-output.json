{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Challenge Newtail API",
    "description": "Backend Routes' Documentation from Newtail's challenge"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Create a new user",
        "description": "Create a new user and login",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "User information",
            "required": true,
            "schema": {
                "$ref": "#/definitions/UserModel"
            }
        }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
              "description": "Bad Request"
          },
          "500": {
              "description": "Internal Server Error"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "summary": "Login",
        "description": "Login a user and generate it's token",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "User information",
            "required": true,
            "schema": {
                "$ref": "#/definitions/UserModel"
            }
        }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "400": {
              "description": "Bad Request"
          },
          "500": {
              "description": "Internal Server Error"
          }
        }
      }
    },
    "/house": {
      "post": {
        "summary": "Create a new house",
        "description": "Route to add a new house",
        "parameters": [
            {
                "name": "obj",
                "in": "body",
                "description": "House Information",
                "required": true,
                "schema": {
                    "$ref": "#/definitions/AddHouse"
                }
            }
        ],
        "responses": {
            "201": {
                "description": "Created"
            },
            "400": {
                "description": "Bad Request"
            },
            "500": {
                "description": "Internal Server Error"
            }
        }
      },
      "get": {
        "summary": "Find or list the houses",
        "description": "Route to return all houses or some specific one",
        "parameters": [
            {
                
                    "name": "id",
                    "in": "query",
                    "type": "string",
                    "description": "Id from the house to be find",
                    "required": false
                },
                {
                    "name": "name",
                    "in": "query",
                    "type": "string",
                    "description": "Name from the house to be find",
                    "required": false
                },
                {
                    "name": "page",
                    "in": "query",
                    "type": "string",
                    "description": "page number from the pagination of find",
                    "required": true
                },
                {
                    "name": "pageSize",
                    "in": "query",
                    "type": "string",
                    "description": "page size from the pagination of find",
                    "required": true
                }
        ],
        "responses": {
            "200": {
                "description": "OK"
            },
            "500": {
                "description": "Internal Server Error"
            }
        }
      }
    },
    "/house/{id}": {
      "delete": {
        "summary": "Delete a house",
        "description": "Route to delete a house's register",
        "parameters": [
            {
                "name": "id",
                "in": "path",
                "type": "string",
                "description": "Id from the house to be deleted",
                "required": true
            }
        ],
        "responses": {
            "200": {
                "description": "OK"
            },
            "400": {
                "description": "Bad Request"
            },
            "500": {
                "description": "Internal Server Error"
            }
        }
      }
    }
  },
  "definitions": {
    "AddHouse": {
        "type": "object",
        "properties": {
            "name":{
                "type": "string",
                "example": "Targaryen"
            },
            "region":{
                "type": "string",
                "example": "Southest"
            },
            "yearFundation":{
                "type": "string",
                "example": "1500"
            },
            "actualLordName":{
                "type": "string",
                "example": "Daenerys Targaryen"
            }
        },
        "required": [
            "name",
            "region",
            "yearFundation",
            "actualLordName"
        ],
        "xml":{
            "name":"AddHouse"
        }
    },
    "UserModel": {
      "type": "object",
      "properties": {
          "email":{
              "type": "string",
              "example": "teste@teste.com"
          },
          "password":{
              "type": "string",
              "example": "123456"
          }
      },
      "required": [
          "email",
          "password"
      ],
      "xml":{
          "name":"UserModel"
      }
  }
  }
}